<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageVisitors">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <EditText
            android:hint="Visitor Name"
            android:id="@+id/editTextVisitorName"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="Visitor Description"
            android:id="@+id/editTextVisitorDescription"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="Visitor Phone"
            android:id="@+id/editTextVisitorPhone"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="Visitor Address"
            android:id="@+id/editTextVisitorAddress"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="Save Visitor"
            android:id="@+id/buttonSaveVisitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="Upload Visitor Pic"
            android:id="@+id/buttonUploadVisitorPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="Back to Main Page"
            android:id="@+id/buttonBackToMainPage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>